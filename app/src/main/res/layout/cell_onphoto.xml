<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_row_listview3"
    android:layoutDirection="rtl"
    >

    <TextView
        android:id="@+id/id_order_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="كود القطعة : "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/ddate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/id_order_text"
        android:layout_alignRight="@+id/id_order_text"
        android:layout_below="@+id/id_order_text"
        android:layout_marginTop="10dp"
        android:text="وقت التوصيف : "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/discreption_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ddate_text"
        android:layout_alignLeft="@+id/ddate_text"
        android:layout_below="@+id/ddate_text"
        android:layout_marginTop="10dp"
        android:text="الاسم التوصيفي : "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/detailed_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/discreption_text"
        android:layout_alignRight="@+id/discreption_text"
        android:layout_below="@+id/discreption_text"
        android:layout_marginTop="10dp"
        android:text="الوصف : "

        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/main_category_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/detailed_description_text"
        android:layout_alignRight="@+id/detailed_description_text"
        android:layout_below="@+id/detailed_description"
        android:layout_marginTop="10dp"
        android:text="التصنيف الرئيسي : "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/sub_category_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/main_category_name_text"
        android:layout_alignRight="@+id/main_category_name_text"
        android:layout_below="@+id/main_category_name_text"
        android:layout_marginTop="10dp"
        android:text="التصنيف الفرعي : "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/weight_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sub_category_name_text"
        android:layout_alignRight="@+id/sub_category_name_text"
        android:layout_below="@+id/sub_category_name_text"
        android:layout_marginTop="10dp"
        android:text="الوزن بالجرام : "
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/id_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="@android:color/black"
        android:gravity="right"/>

    <TextView
        android:id="@+id/ddate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ddate_text"
        android:layout_alignRight="@+id/id_order"

        android:gravity="right"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/discreption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/discreption_text"
        android:layout_alignRight="@+id/ddate"
        android:gravity="right"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/detailed_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/discreption"
        android:layout_alignTop="@+id/detailed_description_text"
        android:gravity="right"
        android:text="TextView"
        android:textAlignment="gravity"

        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/main_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main_category_name_text"
        android:layout_alignRight="@+id/detailed_description"
        android:gravity="right"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/sub_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sub_category_name_text"
        android:layout_alignRight="@+id/main_category_name"
        android:gravity="right"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/weight_st"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weight_text"
        android:layout_alignRight="@+id/sub_category_name"
        android:gravity="right"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="@android:color/black"
        />
    <ImageView
        android:id="@+id/imagess_flog_onphoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight_st"
        android:layout_marginTop="5dp"
        />
</RelativeLayout>