<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_row_home_page"
    android:layoutDirection="rtl">



    <TextView
        android:id="@+id/date_of_close_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/url_text"
        android:layout_alignRight="@+id/url_text"
        android:layout_below="@+id/url"
        android:text="يبدأ إغلاق المزاد في "
        android:textColor="@android:color/black"
        android:layout_marginRight="5dp"

        />

    <TextView
        android:id="@+id/id_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="@android:color/black"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        />


    <TextView
        android:id="@+id/discreption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_order"
        android:gravity="right"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="@android:color/black"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/discreption"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="@android:color/black"
        android:visibility="gone" />


    <TextView
        android:id="@+id/date_of_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/date_of_close_text"
        android:gravity="right"
        android:text="TextView"
        android:textAlignment="gravity"
        android:layout_marginRight="101dp"
        android:textColor="@android:color/black" />


        <ImageView
            android:id="@+id/imagess_flog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_of_close"
            android:layout_marginTop="5dp"
            fresco:placeholderImage="@drawable/ahmed"
            />
            <!--app:srcCompat="@drawable/ahmed"-->
    <!--android:scaleType="fitXY"-->

    <!--<com.facebook.drawee.view.SimpleDraweeView-->
        <!--android:id="@+id/imagess_flog"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--fresco:actualImageScalerType="centerCrop"-->
        <!--fresco:placeholderImage="@drawable/ahmed"-->
        <!--fresco:placeholderImageScaleType="centerCrop"-->
        <!--fresco:roundedCornerRadius="4dp" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:id="@+id/layoutsseww"
        android:layout_below="@+id/imagess_flog">

    <com.like.LikeButton
        app:icon_type="thumb"
        app:icon_size="25dp"
        android:id="@+id/star_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layoutDirection="ltr"/>
    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:id="@+id/layoutss">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/icon_legarage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/legarage_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="48dp"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"

        android:includeFontPadding="false"
        android:text="Le Garage"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
</RelativeLayout>
</RelativeLayout>